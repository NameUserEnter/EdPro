@model EdPro.Models.EpSubjectLoutcome

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити навчальний результат з предмету @ViewBag.SubjectName?</h3>
<div>
    <h4>Навчальний результат</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LearningOutcome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LearningOutcome.LearningOutcome1)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Subject)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" /> і
        @Html.ActionLink("Повернутись","Index", new {id = ViewBag.SubjectId, name = ViewBag.SubjectName, eprogramId = ViewBag.SubjectEprogramId, credit = ViewBag.SubjectCredit, controlId = ViewBag.SubjectControlId}, new { @class = "btn btn-secondary" })
    </form>
</div>
