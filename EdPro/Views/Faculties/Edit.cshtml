            </div>*@
            <p></p>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
</div>

@Html.ActionLink("Повернутись","Index", new {id = ViewBag.UniversityId, name = ViewBag.UniversityName, edbo = ViewBag.UniversityEdbo}, new { @class = "btn btn-secondary" })

