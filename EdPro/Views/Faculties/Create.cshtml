            <input type="hidden" value="@ViewBag.UniversityId" name="UniversityId"/>

            <p></p>

            <div class="form-group">
                <input type="submit" value="Додати" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
</div>

