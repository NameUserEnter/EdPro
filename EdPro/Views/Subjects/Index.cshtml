@model IEnumerable<EdPro.Models.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.EducationProgramName, предмети:</h1>

<p>
    @Html.ActionLink("Додати предмет", "Create", new {educationProgramId = @ViewBag.EducationProgramId}, new { @class = "btn btn-secondary" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Credit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Control)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Eprogram)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Control.ControlTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eprogram.Name)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-info">Редагувати</button></a>
                    <a asp-action="Details" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-info">Навчальні результати</button></a>
                    <a asp-action="Competences" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-info">Компетентності</button></a>
                    <a asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-outline-danger">Видалити</button></a>
            </td>
        </tr>
}
    </tbody>
</table>
