@model EdPro.Models.EpSubjectCompetence

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагування</h1>

<h4>Компетентність</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" value="@ViewBag.SubjectId" name="SubjectId" />
@*            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="SpecialityCompetenceId" class="control-label"></label>
                <select asp-for="SpecialityCompetenceId" class="form-control" asp-items="ViewBag.SpecialityCompetenceId"></select>
                <span asp-validation-for="SpecialityCompetenceId" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Зберегти" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p class="text-danger">@ViewData["ErrorMessage"]</p>
</div>

@Html.ActionLink("Повернутись","Index", new {id = ViewBag.SubjectId, name = ViewBag.SubjectName, eprogramId = ViewBag.SubjectEprogramId, credit = ViewBag.SubjectCredit, controlId = ViewBag.SubjectControlId}, new { @class = "btn btn-secondary" })
<p></p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Компетентність
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Competences)
        {
            <tr class="table-info">
                <td>
                    @item
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
