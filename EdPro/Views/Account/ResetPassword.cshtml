@model EdPro.ViewModel.ResetPasswordViewModel
@{
    ViewData["Title"] = "Скидання пароля";
}

<h2>@ViewData["Title"]</h2>
<h4>Введіть пароль.</h4>
<hr />

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Code" type="hidden" />
            <div>
                <label asp-for="Email"></label><br />
                <input asp-for="Email" value="@ViewBag.uId" readonly />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="ConfirmPassword"></label><br />
                <input asp-for="ConfirmPassword" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Скинути</button>
        </form>

